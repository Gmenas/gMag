extends _head
block content
    script(src="https://code.jquery.com/jquery-3.2.1.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    .container
        h1.text-center.margin-bot-lg #{category.title}
        form(action="/browse" method='POST',style='margin-left:20px;width: 97%; padding-top: 1%;')
                input(type='text', name='search', placeholder='Search', style='width:320px;background:transparent;')
                br
                input(type='radio', name='title', value='Title')
                | Title 
                br
                input(type='radio', name='description', value='Description')
                | Description
                br
                div.rangeslider
                    input.min(name='range_1', type='range', min='1', max='100', value='10')
                    input.max(name='range_1', type='range', min='1', max='100', value='100000',style="position:relative")
                    span.range_min.light.left(style='margin-top:10px') 10 €
                    span.range_max.light.right(style='margin-top:10px') 100000 €     
                input(type='submit', value='Filter',style='width:320px;margin-left:70px')  
        .text-muted
            .row
                each p in products
                    .card.col-xs-12.col-sm-6.col-md-4.text-center.margin-bot-md
                        img(src='/example.svg', alt='Card image cap')
                        .card-title.row.margin-none
                            h3.col-xs-9.text-left
                                a(href='/details/' + p._id) #{p.title}
                            h3.col-xs-3.text-right $#{p.price}
                        p.text-justify #{p.description}
