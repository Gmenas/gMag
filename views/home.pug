extends _head
block content
    .row.margin-bot-md
        .col-sm-12
            form(action="/browse" method='POST')
                #search.input-group
                    input.text-center.form-control(
                        name='searchText'
                        type='text',
                        placeholder='Search'
                        required
                    )
                    span.input-group-addon
                        button(type='submit')
                            span.glyphicon.glyphicon-search
    .row
        .col-sm-12.col-sm-3
            .list-group
                each c in categories
                    a.list-group-item(href='/browse/' + c.url) #{c.title}
        .col-sm-12.col-sm-9
            .jumbotron.text-center
                h1.margin-bot-lg Welcome to <b>gMag</b>!
                .row
                    .container
                        a.btn.btn-primary.btn-lg.col-xs-12.col-md-5.margin-bot-md(href='/browse')
                            | Browse all categories
                        a.btn.btn-primary.btn-lg.col-xs-12.col-md-5.col-md-offset-2(href='/sell')
                            | Sell something
            .row
                +productsList(recent)
