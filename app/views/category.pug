extends _head
block content
    .container
        h1.text-center.margin-bot-md #{category.title}
        .row
            +search('/browse/' + category.url)
        .row.margin-bot-md
            .col-xs-2.text-right
                b $ #{slider.min}
            .col-xs-8
                input#price-range(
                    name='p',
                    type='text',
                    data-provide='slider'
                    data-slider-min=slider.min,
                    data-slider-max=slider.max,
                    data-slider-step=slider.step,
                    data-slider-value='[' + filter.price.min + ',' + filter.price.max + ']'
                    style='width: 100%'
                )
            .col-xs-2.text-left
                b $ #{slider.max}
    .row.scroll
        +productsList(products)

    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.8.1/bootstrap-slider.min.js')
    script(src='/scripts/query-object.min.js')
    script(src='/scripts/slider.js')
    script(src='/scripts/scroll.js')
