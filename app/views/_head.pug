include _mixins
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1')
        title gMag - #{title}
        link(rel='icon', href='/favicon.ico')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.8.1/css/bootstrap-slider.min.css')
        link(rel='stylesheet', href='/styles/main.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='/scripts/query-object.min.js')
    body
        nav.navbar.navbar-fixed-top.navbar-default
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(
                        type='button',
                        data-toggle='collapse',
                        data-target='#navbar',
                        aria-expanded='false',
                        aria-controls='navbar'
                    )
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') gMag
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        if !user
                            li
                                a#register(href='/register')
                                    | Register &nbsp;
                            li
                                a#login(href='/login')
                                    | Login &nbsp;
                                    span.glyphicon.glyphicon-log-in(aria-hidden='true')
                        else
                            li
                                a#username(href='/user/' + user.username) #{user.username}
                            li
                                a#logout(href='/logout')
                                    | Logout &nbsp;
                                    span.glyphicon.glyphicon-log-out(aria-hidden='true')
    .container
        +flash(flash)
        block content
