extends _base
block content
    .row
        .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            form.form-signin.text-center(
                method='POST',
                action='/api/products',
                enctype='multipart/form-data'
            )
                h2.form-signin-heading.margin-bot-md Sell something
                input.form-control.margin-bot-md(
                    name='title',
                    type='text',
                    placeholder='Title',
                    required='',
                    autofocus=''
                )
                textarea.form-control.margin-bot-md(
                    name='description',
                    placeholder='Description',
                    required=''
                    rows="10",
                    style='resize: none'
                )
                select.form-control.margin-bot-md(
                    name='categoryUrl'
                    required=''
                )
                    each c in categories
                        option(value=c.url) #{c.title}
                input.form-control.margin-bot-md(
                    name='price',
                    type='text'
                    placeholder='Price $',
                    required=''
                )
                .row.margin-none.margin-bot-md
                    h4.col-md-6.text-left.padding-none
                        | Upload photo (optional)
                    input.col-md-6(
                        name='photo',
                        type='file'
                    )
                button.btn.btn-lg.btn-primary.btn-block(
                    type='submit'
                ) Publish
