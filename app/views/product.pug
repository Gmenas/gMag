extends _head
block content
    .row
        .col-md-8.col-md-offset-2.col-xs-12.col-sm-12
            img(
                src='/uploads/' + (product.photoId || 'no-image.svg'),
                alt='Product photo'
                style='width: 100%'
            )
            .row
                h1.col-sm-9.text-left #{product.title}
                h1.col-sm-3.text-right.text-muted $#{product.price}
            h3.text-left
                | Seller:&nbsp;
                a(href='/user/' + product.seller.username)
                    | #{product.seller.username}
            h4.text-justify #{product.description}
