extends _base
block content
    .row.margin-bot-md
        +search('/browse')
    .row
        .col-sm-12.col-sm-3
            .list-group
                each c in categories
                    a.list-group-item(href='/browse/' + c.url) #{c.title}
        .col-sm-12.col-sm-9
            .jumbotron.text-center
                h1.margin-bot-lg Welcome to <b>gMag</b>!
                .row
                    .container
                        a#browse.btn.btn-primary.btn-lg.col-xs-12.col-md-5.margin-bot-md(href='/browse')
                            | Browse all categories
                        a#sell.btn.btn-primary.btn-lg.col-xs-12.col-md-5.col-md-offset-2(href='/sell')
                            | Sell something
            .row
                +productsList(recent)
